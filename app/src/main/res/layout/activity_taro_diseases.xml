<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BgGreen"
    tools:context=".TaroDiseases">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/holo_green_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="3dp"
            android:contentDescription="Back Button"
            android:src="@drawable/baseline_arrow_back_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/racing_sans_one"
            android:text="@string/condiplant"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/logo"
            app:layout_constraintStart_toEndOf="@+id/backButton"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="49dp"
            android:layout_height="42dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/logo" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgTaro"
                android:layout_width="137dp"
                android:layout_height="127dp"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.028"
                app:srcCompat="@drawable/taro" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taro Common Diseases"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imgTaro"
                app:layout_constraintEnd_toEndOf="@+id/imgTaro"
                app:layout_constraintStart_toStartOf="@+id/imgTaro"
                app:layout_constraintTop_toTopOf="@+id/imgTaro"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/imgTaroBlghtBox"
                android:layout_width="368dp"
                android:layout_height="113dp"
                android:layout_marginTop="48dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgTaro"
                app:srcCompat="@drawable/rectangle" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="84dp"
                android:layout_height="83dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgTaroBlghtBox"
                app:layout_constraintEnd_toEndOf="@+id/imgTaroBlghtBox"
                app:layout_constraintHorizontal_bias="0.08"
                app:layout_constraintStart_toStartOf="@+id/imgTaroBlghtBox"
                app:layout_constraintTop_toTopOf="@+id/imgTaroBlghtBox"
                app:layout_constraintVertical_bias="0.533"
                app:srcCompat="@drawable/taro_blight" />

            <TextView
                android:id="@+id/txtTaroBlghtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taro Blight"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imgTaroBlghtBox"
                app:layout_constraintEnd_toEndOf="@+id/imgTaroBlghtBox"
                app:layout_constraintHorizontal_bias="0.61"
                app:layout_constraintStart_toStartOf="@+id/imgTaroBlghtBox"
                app:layout_constraintTop_toTopOf="@+id/imgTaroBlghtBox"
                app:layout_constraintVertical_bias="0.095" />

            <TextView
                android:id="@+id/txtTaroBlghtDesc"
                android:layout_width="226dp"
                android:layout_height="70dp"
                android:justificationMode="inter_word"
                android:text="Are small, dark brown flecks or light brown spots on the upper leaf surface. The spots enlarge rapidly, becoming circular, zonate, and purplish brown to brown in color. Bright orange or reddish brown plant exudate oozing from infection sites is another symptom of leaf blight disease in taro."
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="@+id/imgTaroBlghtBox"
                app:layout_constraintEnd_toEndOf="@+id/imgTaroBlghtBox"
                app:layout_constraintHorizontal_bias="0.809"
                app:layout_constraintStart_toStartOf="@+id/imgTaroBlghtBox"
                app:layout_constraintTop_toBottomOf="@+id/txtTaroBlghtTitle"
                app:layout_constraintVertical_bias="0.066" />

            <ImageView
                android:id="@+id/imgTaroMscBox"
                android:layout_width="368dp"
                android:layout_height="113dp"
                android:layout_marginTop="128dp"
                app:layout_constraintEnd_toEndOf="@+id/imgTaroBlghtBox"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/imgTaroBlghtBox"
                app:layout_constraintTop_toTopOf="@+id/imgTaroBlghtBox"
                app:srcCompat="@drawable/rectangle" />

            <ImageView
                android:id="@+id/imgTaroMsc"
                android:layout_width="84dp"
                android:layout_height="83dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgTaroMscBox"
                app:layout_constraintEnd_toEndOf="@+id/imgTaroMscBox"
                app:layout_constraintHorizontal_bias="0.08"
                app:layout_constraintStart_toStartOf="@+id/imgTaroMscBox"
                app:layout_constraintTop_toTopOf="@+id/imgTaroMscBox"
                app:layout_constraintVertical_bias="0.533"
                app:srcCompat="@drawable/taro_mosaic" />

            <TextView
                android:id="@+id/txtTaroMscTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taro Mosaic Virus"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imgTaroMscBox"
                app:layout_constraintEnd_toEndOf="@+id/imgTaroMscBox"
                app:layout_constraintHorizontal_bias="0.624"
                app:layout_constraintStart_toStartOf="@+id/imgTaroMscBox"
                app:layout_constraintTop_toTopOf="@+id/imgTaroMscBox"
                app:layout_constraintVertical_bias="0.095" />

            <TextView
                android:id="@+id/txtTaroMscDesc"
                android:layout_width="230dp"
                android:layout_height="64dp"
                android:justificationMode="inter_word"
                android:text="Light green streaks appear along the main leaf veins or between them. These streaks form different patterns: some are light green, feather-Â­like patches between the veins, others are over the main veins throughout the leaf."
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="@+id/imgTaroMscBox"
                app:layout_constraintEnd_toEndOf="@+id/imgTaroMscBox"
                app:layout_constraintHorizontal_bias="0.833"
                app:layout_constraintStart_toStartOf="@+id/imgTaroMscBox"
                app:layout_constraintTop_toBottomOf="@+id/txtTaroMscTitle"
                app:layout_constraintVertical_bias="0.333" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>