<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BgGreen"
    tools:context=".ListOfRootcrops">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Root Crops"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.109" />

    <ImageButton
        android:id="@+id/btnCassava"
        android:layout_width="179dp"
        android:layout_height="152dp"
        android:background="@color/BgGreen"
        android:contentDescription="Cassava"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.078"
        app:srcCompat="@drawable/cassava" />

    <TextView
        android:id="@+id/txtCassava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cassava"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnCassava"
        app:layout_constraintEnd_toEndOf="@+id/btnCassava"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/btnCassava"
        app:layout_constraintTop_toTopOf="@+id/btnCassava"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/btnTaro"
        android:layout_width="174dp"
        android:layout_height="159dp"
        android:layout_marginBottom="208dp"
        android:background="@color/BgGreen"
        android:contentDescription="Taro"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCassava"
        app:layout_constraintVertical_bias="0.424"
        app:srcCompat="@drawable/taro" />

    <TextView
        android:id="@+id/txtTaro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taro"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnTaro"
        app:layout_constraintEnd_toEndOf="@+id/btnTaro"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/btnTaro"
        app:layout_constraintTop_toTopOf="@+id/btnTaro"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/btnSweetPotato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/BgGreen"
        android:contentDescription="Sweet_Potato"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTaro"
        app:layout_constraintVertical_bias="0.384"
        app:srcCompat="@drawable/sweet_potato" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sweet Potato"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnSweetPotato"
        app:layout_constraintEnd_toEndOf="@+id/btnSweetPotato"
        app:layout_constraintStart_toStartOf="@+id/btnSweetPotato"
        app:layout_constraintTop_toTopOf="@+id/btnSweetPotato"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>